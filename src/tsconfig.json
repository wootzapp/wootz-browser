{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": true,
      // esnext modules supports import() async webpack modules
      "module": "esnext",
      // chrome 80 supports 100% es2019
      "target": "es2019",
      "allowJs": true,
      // convert jsx to react components
      "jsx": "react",
      "lib": [
        "es6",
        "dom",
        "DOM.Iterable",
        "es7",
        "es2017",
        "es2018",
        "es2019",
        "esnext"
      ],
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        // "*": ["*"],
        "brave-ui": ["node_modules/@brave/brave-ui"],
        "brave-ui/*": ["node_modules/@brave/brave-ui/*"],
        "gen/*": [
          "../out/Release/gen/*",
          "../outbkp/Release/gen/*",
          "../out/Debug/gen/*",
          "../outbkp/Debug/gen/*"
        ],
        "chrome://resources/*": [
          "../out/Release/gen/ui/webui/resources/tsc/*",
          "../outbkp/Release/gen/ui/webui/resources/tsc/*",
          "../out/Debug/gen/ui/webui/resources/tsc/*",
          "../outbkp/Debug/gen/ui/webui/resources/tsc/*"
        ],
        "chrome://resources/wootz/*": [
          "../out/Release/gen/wootz/ui/webui/resources/tsc/*",
          "../outbkp/Release/gen/wootz/ui/webui/resources/tsc/*",
          "../out/Debug/gen/wootz/ui/webui/resources/tsc/*",
          "../outbkp/Debug/gen/wootz/ui/webui/resources/tsc/*",
        ],
        "$web-common/*": ["components/common/*"],
        "$web-components/*": ["components/web-components/*"]
      },
      "typeRoots": ["./node_modules/@types", "./components/definitions"],
      // optional
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "include": []
  }
  