config("warnings") {
  cflags = []

  if (is_clang) {
    cflags += [
      "-Wno-implicit-fallthrough",
      "-Wno-deprecated-declarations",
    ]
  }
}

config("external_config") {
  include_dirs = [ "//third_party/argon2/src/include" ]
}

static_library("argon2") {
  configs += [ ":warnings" ]
  public_configs = [ ":external_config" ]

  visibility = [
    "//chrome/browser/wootz_wallet:external_wallets_importer",
    "//components/wootz_wallet/browser",
    "//components/wootz_wallet/common",
  ]

  defines = [ "ARGON2_NO_THREADS" ]

  sources = [
    "src/include/argon2.h",
    "src/src/argon2.c",
    "src/src/blake2/blake2-impl.h",
    "src/src/blake2/blake2.h",
    "src/src/blake2/blake2b.c",
    "src/src/blake2/blamka-round-ref.h",
    "src/src/core.c",
    "src/src/core.h",
    "src/src/encoding.c",
    "src/src/encoding.h",
    "src/src/ref.c",
  ]
}
