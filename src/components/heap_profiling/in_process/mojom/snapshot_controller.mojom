module heap_profiling.mojom;

// Lets HeapProfilerController in the browser process schedule heap snapshots in
// child processes.
interface SnapshotController {
  // Triggers a heap snapshot. The snapshot data will be passed back to the
  // browser process using metrics::ChildCallStackProfileCollector, for
  // inclusion in the next metrics upload via CallStackProfileMetricsProvider.
  TakeSnapshot();
};
