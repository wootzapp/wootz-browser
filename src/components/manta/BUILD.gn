assert(!is_android)

component("manta") {
  sources = [
    "base_provider.cc",
    "base_provider.h",
    "features.cc",
    "features.h",
    "mahi_provider.cc",
    "mahi_provider.h",
    "manta_service.cc",
    "manta_service.h",
    "manta_service_callbacks.cc",
    "manta_service_callbacks.h",
    "manta_status.h",
    "orca_provider.cc",
    "orca_provider.h",
    "snapper_provider.cc",
    "snapper_provider.h",
  ]

  defines = [ "IS_MANTA_IMPL" ]

