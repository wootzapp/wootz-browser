module side_panel.mojom;

import "mojo/public/mojom/base/time.mojom";
import "url/mojom/url.mojom";

// Factory to create the performance page handler.
interface PerformancePageHandlerFactory {
  // The WebUI calls this method when the page is first initialized.
  CreatePerformancePageHandler(
      pending_remote<PerformancePage> page,
      pending_receiver<PerformancePageHandler> handler);
};

enum ResourceType {
  kMemory = 0,
  kCPU = 1,
  kNetwork = 2,
};

enum HealthLevel {
  kHealthy,
  kMedium,
  kUnhealthy,
};

// This enum is used in query params when constructing a WebUI Side Panel. Even
// though it is not used in mojom interfaces, it is defined here to keep it in
// sync between the browser and WebUI.
enum PerformanceSidePanelNotification {
  kMemorySaverRevisitDiscardedTab = 0,
};

// Browser-side handler for requests from WebUI page.
interface PerformancePageHandler {
  // Notify the backend that the UI is ready to be shown.
  ShowUI();
};

// WebUI-side handler for requests from the browser.
interface PerformancePage {

};

